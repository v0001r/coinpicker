<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/grid_text"
        android:elevation="@dimen/_2sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="@android:color/black"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/table_row_border"
        android:fontFamily="@font/fontsfree_net_point_soft_black"
        android:gravity="center"
        tools:text="99"/>

    <View
        android:id="@+id/bgview"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        app:layout_constraintStart_toStartOf="@+id/grid_text"
        app:layout_constraintTop_toTopOf="@+id/grid_text"
        app:layout_constraintEnd_toEndOf="@+id/grid_text"
        app:layout_constraintBottom_toBottomOf="@+id/grid_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>