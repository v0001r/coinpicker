<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/grid_text"
        android:elevation="@dimen/_2sdp"
        style="@style/otp_textview_style"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:gravity="center"
        tools:text="99"/>

    <View
        android:id="@+id/bgview"
        android:background="@color/color_game_recycle_heading_text"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintStart_toStartOf="@+id/grid_text"
        app:layout_constraintTop_toTopOf="@+id/grid_text"
        app:layout_constraintEnd_toEndOf="@+id/grid_text"
        app:layout_constraintBottom_toBottomOf="@+id/grid_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>